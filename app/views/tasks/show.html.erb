<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<p>
  <b>Project:</b>
  <%= link_to @task.project.name, project_path(@task.project) %>
</p>

<p>
  <b>Task:</b>
  <%= @task.name %>
</p>

<p>
  <b>Description:</b>
  <%= @task.description %>
</p>

<p>
  <b>Owner:</b>
  <%= @task.user.name %>
</p>

<p>
  <b>Estimate:</b>
  <%= @task.estimate %>
</p>

<p>
  <b>Status:</b>
  <%= @task.status %>
</p>

<p>
  <b>Type:</b>
  <%= @task.type %>
</p>

<%= link_to 'Edit', edit_task_path(@task) %>

<%= content_tag :h2, "Comments:" if @task.comments.any? %>

<ul>
  <% @comments.each do |c| %>
  <li>
    <em><%= c.user.email %></em> said<br />
    <%= c.description %><br />
    <%= link_to 'Destroy', comment_path(c), confirm: 'Are you sure?', method: :delete %>
  </li>
  <% end %>
</ul>

<%= form_for [@task, @comment] do |c| %>
<div class="field">
  <%= c.label :description %><br />
  <%= c.text_area :description %>
</div>
<div class="actions">
  <%= c.submit %>
</div>
<% end %>

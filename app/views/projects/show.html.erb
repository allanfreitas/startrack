<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @project.name %>
</p>

<p>
  <b>Description:</b>
  <%= @project.description %>
</p>

<%= link_to 'Edit', edit_project_path(@project) %>

<h2>Tasks:</h2>

<ul>
  <% @tasks.each do |t| %>
  <li><%= link_to t.name, task_path(t)  %></li>
  <% end %>
</ul>

<%= link_to 'New Task', new_project_task_path(@project) %>
